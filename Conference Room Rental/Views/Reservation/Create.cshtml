@model Conference_Room_Rental.Models.ViewModels.CreateReservationViewModel

@{
    ViewData["Title"] = "Nowa Rezerwacja";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow border-0 rounded-3 overflow-hidden">

                <div class="card-header bg-white p-4 border-bottom-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-3">
                            <i class="bi bi-calendar-plus-fill fs-3"></i>
                        </div>
                        <div>
                            <h2 class="fw-bold mb-0">Zarezerwuj Termin</h2>
                            <p class="text-muted mb-0">Wypełnij formularz, aby zablokować salę.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 pt-0">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-uppercase small text-muted mb-2">
                                <i class="bi bi-door-open me-1"></i> Wybrana Przestrzeń
                            </label>

                            @if (Model.ConferenceRoomId.HasValue)
                            {
                                <div class="card border border-primary bg-primary bg-opacity-10 mb-3">
                                    <div class="row g-0 align-items-center">
                                        <div class="col-md-4">
                                            <img src="@(Model.SelectedRoomImageUrl ?? "https://via.placeholder.com/400x300?text=Sala")"
                                                 class="img-fluid rounded-start h-100"
                                                 style="object-fit: cover; min-height: 120px;"
                                                 alt="@Model.SelectedRoomName">
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-body py-2">
                                                <h5 class="card-title fw-bold text-primary mb-1">@Model.SelectedRoomName</h5>
                                                <p class="card-text text-muted small mb-1 text-truncate">@Model.SelectedRoomDescription</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <span class="badge bg-white text-primary border border-primary">
                                                        @Model.SelectedRoomPrice?.ToString("C") / h
                                                    </span>
                                                    <a asp-controller="ConferenceRoom" asp-action="Index" class="btn btn-sm btn-link text-decoration-none">Zmień</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <input type="hidden" asp-for="ConferenceRoomId" />
                            }
                            else
                            {
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                                    <select asp-for="ConferenceRoomId"
                                            class="form-select form-select-lg"
                                            asp-items="Model.ConferenceRooms">
                                        <option value="">-- Wybierz salę z listy --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="ConferenceRoomId" class="text-danger small mt-1 d-block"></span>
                            }
                        </div>

                        <div class="bg-light p-4 rounded-3 mb-4 border">
                            <label class="form-label fw-bold text-uppercase small text-muted mb-3">
                                <i class="bi bi-clock-history me-1"></i> Czas Trwania
                            </label>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="StartTime" class="form-label small fw-bold">Początek</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white"><i class="bi bi-play-circle"></i></span>
                                        <input asp-for="StartTime"
                                               class="form-control"
                                               type="datetime-local"
                                               asp-format="{0:yyyy-MM-ddTHH:mm}" />
                                    </div>
                                    <span asp-validation-for="StartTime" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="EndTime" class="form-label small fw-bold">Koniec</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white"><i class="bi bi-stop-circle"></i></span>
                                        <input asp-for="EndTime"
                                               class="form-control"
                                               type="datetime-local"
                                               asp-format="{0:yyyy-MM-ddTHH:mm}" />
                                    </div>
                                    <span asp-validation-for="EndTime" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mt-3 text-muted small">
                                <i class="bi bi-info-circle me-1"></i> System automatycznie obliczy koszt całkowity po zatwierdzeniu.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 me-md-2">Anuluj</a>
                            <button type="submit" class="btn btn-success btn-lg px-5 shadow-sm">
                                Potwierdź Rezerwację <i class="bi bi-check-lg ms-1"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3 text-muted small">
                Masz pytania? Skontaktuj się z obsługą klienta.
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}