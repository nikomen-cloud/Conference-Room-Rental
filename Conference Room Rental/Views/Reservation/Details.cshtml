@model Conference_Room_Rental.Models.Reservation

@{
    ViewData["Title"] = "Szczegóły Rezerwacji";
    var duration = Model.EndTime - Model.StartTime;
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Szczegóły Rezerwacji #@Model.Id</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="card-title text-muted border-bottom pb-2">Informacje podstawowe</h5>

                    <p class="mb-1"><strong>Sala konferencyjna:</strong></p>
                    <p class="fs-5">@Model.ConferenceRoom.RoomNumber</p>

                    <p class="mb-1"><strong>Rozpoczęcie:</strong></p>
                    <p>@Model.StartTime.ToString("yyyy-MM-dd HH:mm")</p>

                    <p class="mb-1"><strong>Zakończenie:</strong></p>
                    <p>@Model.EndTime.ToString("yyyy-MM-dd HH:mm")</p>

                    <p class="mb-1"><strong>Czas trwania:</strong></p>
                    <p>@duration.TotalHours.ToString("0.##") godz.</p>
                </div>

                <div class="col-md-6">
                    <h5 class="card-title text-muted border-bottom pb-2">Status i Koszty</h5>

                    <p class="mb-1"><strong>Status rezerwacji:</strong></p>
                    <div class="mb-3">
                        @if (Model.Status == Conference_Room_Rental.Models.ReservationStatus.Cancelled)
                        {
                            <span class="badge bg-danger fs-6">Anulowana</span>
                        }
                        else if (Model.Status == Conference_Room_Rental.Models.ReservationStatus.Pending)
                        {
                            <span class="badge bg-warning text-dark fs-6">Oczekująca</span>
                        }
                        else
                        {
                            <span class="badge bg-success fs-6">Zatwierdzona</span>
                        }
                    </div>

                    <p class="mb-1"><strong>Stawka godzinowa sali:</strong></p>
                    <p>@Model.ConferenceRoom.PricePerHour.ToString("C") / h</p>

                    <div class="alert alert-secondary mt-3">
                        <h4 class="alert-heading fs-6">Łączny koszt:</h4>
                        <span class="fw-bold fs-3 text-success">@Model.TotalCost.ToString("C")</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                &larr; Powrót do listy
            </a>

            @if (Model.Status != Conference_Room_Rental.Models.ReservationStatus.Cancelled)
            {
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Czy na pewno chcesz anulować tę rezerwację? Operacja jest nieodwracalna.');">
                        Anuluj rezerwację
                    </button>
                </form>
            }
        </div>
    </div>
</div>