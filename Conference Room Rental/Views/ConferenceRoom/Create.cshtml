@model Conference_Room_Rental.Models.ConferenceRoom
@{
    ViewData["Title"] = "Dodaj Salę";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white p-3">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Dodaj Nową Salę</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="RoomNumber" class="form-label">Nazwa Sali</label>
                                <input asp-for="RoomNumber" class="form-control" placeholder="np. Sala 101" />
                                <span asp-validation-for="RoomNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Location" class="form-label">Lokalizacja</label>
                                <input asp-for="Location" class="form-control" placeholder="np. 1 Piętro" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Opis</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Capacity" class="form-label">Pojemność</label>
                                <input asp-for="Capacity" class="form-control" type="number" />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="PricePerHour" class="form-label">Cena (PLN/h)</label>
                                <input asp-for="PricePerHour" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="PricePerHour" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ImageUrl" class="form-label">URL Obrazka</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="/images/..." />
                            </div>
                        </div>

                        <div class="mb-4 p-3 bg-light rounded border">
                            <label class="form-label fw-bold mb-2">Wyposażenie:</label>
                            <div class="row">
                                <div class="col-6 col-md-3 form-check ps-5">
                                    <input class="form-check-input" asp-for="HasProjector" /> <label class="form-check-label" asp-for="HasProjector">Rzutnik</label>
                                </div>
                                <div class="col-6 col-md-3 form-check ps-5">
                                    <input class="form-check-input" asp-for="HasWiFi" /> <label class="form-check-label" asp-for="HasWiFi">Wi-Fi</label>
                                </div>
                                <div class="col-6 col-md-3 form-check ps-5">
                                    <input class="form-check-input" asp-for="HasAirConditioning" /> <label class="form-check-label" asp-for="HasAirConditioning">Klima</label>
                                </div>
                                <div class="col-6 col-md-3 form-check ps-5">
                                    <input class="form-check-input" asp-for="HasWhiteboard" /> <label class="form-check-label" asp-for="HasWhiteboard">Tablica</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                            <button type="submit" class="btn btn-success">Zapisz Salę</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>