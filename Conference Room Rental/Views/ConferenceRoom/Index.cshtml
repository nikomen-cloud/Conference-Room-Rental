@model IEnumerable<Conference_Room_Rental.Models.ConferenceRoom>

@{
    ViewData["Title"] = "Nasze Sale";
}

<style>
    .add-room-card {
        border: 2px dashed #cbd5e1;
        background-color: #f8f9fa;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .add-room-card:hover {
            border-color: #0d6efd;
            background-color: #e9ecef;
            transform: translateY(-5px);
        }

    .hover-effect {
        transition: transform 0.2s;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .hover-primary:hover {
        color: #0d6efd !important;
    }
</style>

<div class="container mt-4 mb-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Dostępne Sale Konferencyjne</h1>
        <p class="text-muted lead">Wybierz idealną przestrzeń dla swojego biznesu</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        @foreach (var room in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 hover-effect">
                    <a asp-controller="ConferenceRoom" asp-action="Details" asp-route-id="@room.Id" class="text-decoration-none">
                        <img src="@(room.ImageUrl ?? "https://via.placeholder.com/400x250?text=Sala+Konferencyjna")"
                             class="card-img-top"
                             alt="@room.RoomNumber"
                             style="height: 220px; object-fit: cover;">
                    </a>

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <a asp-controller="ConferenceRoom" asp-action="Details" asp-route-id="@room.Id" class="text-decoration-none text-dark">
                                <h5 class="card-title fw-bold hover-primary">@room.RoomNumber</h5>
                            </a>
                            <span class="badge bg-light text-dark border">
                                <i class="bi bi-people-fill"></i> @room.Capacity
                            </span>
                        </div>

                        <h6 class="card-subtitle mb-3 text-muted small">
                            <i class="bi bi-geo-alt-fill text-danger"></i> @room.Location
                        </h6>

                        <p class="card-text text-muted small">
                            @(room.Description.Length > 100 ? room.Description.Substring(0, 97) + "..." : room.Description)
                        </p>

                        <div class="mb-3">
                            @if (room.HasProjector)
                            {
                                <span class="badge bg-primary bg-opacity-10 text-primary me-1" title="Projektor"><i class="bi bi-projector-fill"></i></span>
                            }
                            @if (room.HasAirConditioning)
                            {
                                <span class="badge bg-info bg-opacity-10 text-info me-1" title="Klimatyzacja"><i class="bi bi-snow"></i></span>
                            }
                            @if (room.HasWiFi)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success me-1" title="Wi-Fi"><i class="bi bi-wifi"></i></span>
                            }
                            @if (room.HasWhiteboard)
                            {
                                <span class="badge bg-secondary bg-opacity-10 text-secondary me-1" title="Tablica"><i class="bi bi-easel"></i></span>
                            }
                        </div>
                    </div>

                    <div class="card-footer bg-white border-top-0 pb-3 pt-0">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="fs-5 fw-bold text-primary">@room.PricePerHour.ToString("C") <small class="fs-6 text-muted fw-normal">/ h</small></span>
                        </div>

                        <div class="d-grid gap-2 d-flex mb-2">
                            <a asp-controller="ConferenceRoom" asp-action="Details" asp-route-id="@room.Id" class="btn btn-outline-secondary flex-grow-1">
                                Szczegóły
                            </a>
                            <a asp-controller="Reservation" asp-action="Create" asp-route-roomId="@room.Id" class="btn btn-success flex-grow-1">
                                Rezerwuj
                            </a>
                        </div>

                        @if (User.IsInRole("Admin"))
                        {
                            <hr class="my-2" />
                            <div class="d-flex justify-content-between gap-2">
                                <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-sm btn-warning w-100">
                                    <i class="bi bi-pencil"></i> Edytuj
                                </a>
                                <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-sm btn-danger w-100">
                                    <i class="bi bi-trash"></i> Usuń
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        @if (User.IsInRole("Admin"))
        {
            <div class="col">
                <a asp-action="Create" class="text-decoration-none">
                    <div class="card h-100 add-room-card d-flex align-items-center justify-content-center text-center p-5" style="min-height: 400px;">
                        <div>
                            <i class="bi bi-plus-lg display-1 text-secondary mb-3"></i>
                            <h4 class="text-secondary fw-bold">Dodaj nową salę</h4>
                            <p class="text-muted small">Kliknij, aby utworzyć nową przestrzeń</p>
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>
</div>